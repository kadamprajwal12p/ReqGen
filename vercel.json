{
    "version": 2,
    "buildCommand": "npx vite build",
    "outputDirectory": "dist/public",
    "framework": "vite",
    "functions": {
        "api/*.js": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://electronic-vivianne-cybaemtech-4617c1fa.koyeb.app/api/:path*"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}